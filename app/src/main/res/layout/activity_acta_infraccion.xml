<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="false"
    android:fillViewport="true"
    android:background="#F3F4F6"
    tools:context=".ActaInfraccionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ðŸ”¹ Encabezado institucional -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3EBD84"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tvHeaderMunicipio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MUNICIPALIDAD DE POSADAS"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.05" />

            <TextView
                android:id="@+id/tvHeaderReparticion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DirecciÃ³n de Obras Privadas"
                android:textColor="#E9FFFA"
                android:textSize="13sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- ðŸ”¹ Card principal del formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACTA DE INFRACCIÃ“N / INSPECCIÃ“N"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complete los datos del propietario, inmueble y seleccione las causas o resultados segÃºn corresponda."
                android:textSize="12sp"
                android:textColor="#777777"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- DATOS DEL PROPIETARIO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATOS DEL PROPIETARIO"
                android:textStyle="bold"
                android:textColor="#3EBD84"
                android:textSize="14sp" />

            <View
                android:layout_width="36dp"
                android:layout_height="2dp"
                android:background="#3EBD84"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="6dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <EditText
                    android:id="@+id/etPropietario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre y Apellido"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/etDomicilio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Domicilio"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/etLugarInfraccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lugar de InfracciÃ³n"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- DATOS DEL INMUEBLE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATOS DEL INMUEBLE"
                android:textStyle="bold"
                android:textColor="#3EBD84"
                android:textSize="14sp"
                android:layout_marginTop="16dp" />

            <View
                android:layout_width="36dp"
                android:layout_height="2dp"
                android:background="#3EBD84"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp">

                    <EditText
                        android:id="@+id/etSeccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="SecciÃ³n" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp">

                    <EditText
                        android:id="@+id/etChacra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Chacra" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp">

                    <EditText
                        android:id="@+id/etManzana"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Manzana" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp">

                    <EditText
                        android:id="@+id/etParcela"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Parcela" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp">

                    <EditText
                        android:id="@+id/etLote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Lote" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp">

                    <EditText
                        android:id="@+id/etPartida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Partida" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- CAUSAS / FALTAS (INFRACCIÃ“N) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CAUSAS / FALTAS (INFRACCIÃ“N)"
                android:textStyle="bold"
                android:textColor="#3EBD84"
                android:textSize="14sp"
                android:layout_marginTop="16dp" />

            <View
                android:layout_width="36dp"
                android:layout_height="2dp"
                android:background="#3EBD84"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="6dp" />

            <!-- BotÃ³n + resumen -->
            <Button
                android:id="@+id/btnSeleccionarCausas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccionar causas / faltas"
                android:layout_marginTop="4dp"
                android:backgroundTint="#E6F7F0"
                android:textColor="#1A7A50"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/tvCausasSeleccionadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ninguna causa seleccionada"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp" />

            <!-- CheckBoxes originales ocultos (backend) -->
            <LinearLayout
                android:id="@+id/layoutCausasCheckBoxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/cbCartelObra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cartel de Obra Reglamentario (punto 2.2.12 C.E.P.)" />

                <CheckBox
                    android:id="@+id/cbDispositivosSeguridad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dispositivos de Seguridad (punto 4.14 y anexos C.E.P.)" />

                <CheckBox
                    android:id="@+id/cbNumeroPermiso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NÂº Permiso (punto 2.2.6 y anexos C.E.P.)" />

                <CheckBox
                    android:id="@+id/cbMaterialesVereda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Materiales en Vereda (punto 3.5.2.4 C.E.P.)" />

                <CheckBox
                    android:id="@+id/cbCercoObra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cerco de Obra (punto 4.1 y anexos C.E.P.)" />

                <CheckBox
                    android:id="@+id/cbPlanosAprobados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Planos Aprobados (punto 2.1.8.7 C.E.P.)" />

                <CheckBox
                    android:id="@+id/cbDirectorObra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Director de Obra (punto 2.4.1 C.E.P.)" />

                <CheckBox
                    android:id="@+id/cbVarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Varios" />

                <!-- âœ… NUEVOS CHECKBOX "BACKEND" PARA CAUSAS/FALTAS -->
                <CheckBox
                    android:id="@+id/cbIncumplimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Incumplimiento" />

                <CheckBox
                    android:id="@+id/cbClausuraPreventiva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clausura preventiva" />

            </LinearLayout>

            <!-- RESULTADO (INSPECCIÃ“N) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESULTADO (INSPECCIÃ“N)"
                android:textStyle="bold"
                android:textColor="#3EBD84"
                android:textSize="14sp"
                android:layout_marginTop="16dp" />

            <View
                android:layout_width="36dp"
                android:layout_height="2dp"
                android:background="#3EBD84"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="6dp" />

            <Button
                android:id="@+id/btnSeleccionarCausasInspeccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccionar resultado de inspecciÃ³n"
                android:layout_marginTop="4dp"
                android:backgroundTint="#E6F7F0"
                android:textColor="#1A7A50"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/tvCausasSeleccionadasInspeccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NingÃºn resultado seleccionado"
                android:textSize="12sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp" />

            <!-- INFO ADICIONAL -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/etBoletaInspeccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Boleta de InspecciÃ³n NÂº" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/etObservaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Observaciones"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top|start" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- FIRMA E IMÃGENES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Firma del Infractor"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toque para firmar"
                        android:textStyle="italic"
                        android:textSize="12sp"
                        android:textColor="#0066CC" />
                </LinearLayout>

                <es.rcti.demoprinterplus.sistemainmobilario.SignatureView
                    android:id="@+id/signatureView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnFirma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Firmar en pantalla completa"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#3EBD84"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnExpandSignature"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Expandir firma"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/btnClearSignature"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Borrar firma"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ImÃ¡genes de prueba"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <Button
                    android:id="@+id/btnAddImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agregar imÃ¡genes"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvImages"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- BOTÃ“N PRINCIPAL -->
            <Button
                android:id="@+id/btnGuardarImprimir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar e imprimir"
                android:layout_marginTop="24dp"
                android:backgroundTint="#3EBD84"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="15sp" />



        </LinearLayout>

    </LinearLayout>
</ScrollView>
